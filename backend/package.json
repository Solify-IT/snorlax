{
  "name": "snorlax-backend",
  "version": "0.0.1",
  "description": "Backend service for Snorlax project",
  "main": "src/index.js",
  "repository": "https://github.com/Solify-IT/snorlax",
  "author": "solify-it",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist/*",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc",
    "dev": "tsnd --respawn -r tsconfig-paths/register ./src",
    "migrate": "node-pg-migrate -j ts -m src/infrastructure/datastore/migrations",
    "migrate:create": "node-pg-migrate -j ts -m src/infrastructure/datastore/migrations create",
    "migrate:up": "ts-node node_modules/.bin/node-pg-migrate -j ts -m src/infrastructure/datastore/migrations up",
    "migrate:down": "ts-node node_modules/.bin/node-pg-migrate -j ts -m src/infrastructure/datastore/migrations down",
    "before:test": "dotenv -e .env.test -- npm-run-all migrate:up",
    "jest": "dotenv -e .env.test -- jest",
    "test": "./scripts/test.sh",
    "asdf": "echo hola"
  },
  "devDependencies": {
    "@types/async": "^3.2.6",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.5.0",
    "@types/fs-extra": "^9.0.8",
    "@types/jest": "^26.0.21",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.34",
    "@types/pg": "^7.14.11",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "concurrently": "^6.0.0",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.0",
    "fs-extra": "^9.1.0",
    "jest": "^26.6.3",
    "node-dev": "^6.4.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@types/uuid": "^8.3.0",
    "async": "^3.2.0",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-var": "^1.1.0",
    "dotenv-cli": "^4.0.0",
    "express": "^4.17.1",
    "factory.ts": "^0.5.1",
    "faker": "^5.5.2",
    "lodash": "^4.17.21",
    "node-pg-migrate": "^5.9.0",
    "pg": "^8.5.1",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  }
}
