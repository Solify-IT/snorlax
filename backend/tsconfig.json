{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": ".",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "typeRoots" : ["./node_modules/@types", "./src/@types"],
    // "paths": {
    //     "*": [
    //         "node_modules/*"
    //     ]
    // }
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "scripts/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
